<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.guohualife.parent</groupId>
		<artifactId>gh-parent</artifactId>
		<version>1.0.1</version>
	</parent>
	<groupId>com.sinosoft.surrender</groupId>
	<artifactId>surrender-service-platform</artifactId>
	<version>1.0.0${env.version}</version>
	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<gh-platform.version>2.0.0</gh-platform.version>
		<fastjson-version>1.2.29</fastjson-version>
		<gh-util-cache-version>1.7.8</gh-util-cache-version>
		<xmemcached-version>2.0.0</xmemcached-version>
		<spring-web-version>3.2.16.RELEASE</spring-web-version>
		<jaxen-version>1.1.1</jaxen-version>
		<commons-lang-version>2.6</commons-lang-version>
		<commons-collections-version>3.2</commons-collections-version>
		<commons-io-version>1.3.1</commons-io-version>
		<commons-httpclient-version>3.1</commons-httpclient-version>
		<httpclient-version>4.5.3</httpclient-version>
		<jdom-version>1.1</jdom-version>
		<dom4j-version>1.6.1</dom4j-version>
		<servlet-api-version>2.5</servlet-api-version>
		<jsp-api-version>2.2</jsp-api-version>
		<aspectjweaver-version>1.5.3</aspectjweaver-version>
		<log4j-version>1.2.17</log4j-version>
		<cxf-rt-frontend-jaxws-version>2.2.9</cxf-rt-frontend-jaxws-version>
		<cxf-rt-transports-http-version>2.2.9</cxf-rt-transports-http-version>
		<ojdbc-version>14</ojdbc-version>
		<druid-version>1.1.13</druid-version>
		<!-- 客户端 -->
		<surrender-service-client-version>1.0.0</surrender-service-client-version>
		<batch-util-quartz-version>1.0.0</batch-util-quartz-version>
		<surrender-db-version>1.0.0</surrender-db-version>
	</properties>

	<repositories>
		<repository>
			<id>nexus</id>
			<name>nexus</name>
			<url>http://maven.guohualife.com:8081/repository/gh-group/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
		</repository>
	</repositories>
	<dependencies>
		<!-- 国华框架包 -->
		<dependency>
			<groupId>com.guohualife.platform</groupId>
			<artifactId>gh-platform</artifactId>
			<version>${gh-platform.version}</version>
		</dependency>
		<!-- 缓存包 -->
		<dependency>
			<groupId>com.guohualife.common.util</groupId>
			<artifactId>gh-util-cache</artifactId>
			<version>${gh-util-cache-version}</version>
			<!-- <optional>true</optional> -->
		</dependency>
		<dependency>
			<groupId>com.googlecode.xmemcached</groupId>
			<artifactId>xmemcached</artifactId>
			<version>${xmemcached-version}</version>
		</dependency>
		<!-- 公共包 三方包 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>${spring-web-version}</version>
		</dependency>
		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>${jaxen-version}</version>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>fastjson</artifactId>
			<version>${fastjson-version}</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>${commons-lang-version}</version>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>${commons-collections-version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${commons-io-version}</version>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<version>${commons-httpclient-version}</version>
		</dependency>
		
		<dependency>
		  <groupId>com.guohualife.ebiz.config</groupId>
		  <artifactId>gh-config-client</artifactId>
		  <version>1.2.2</version>
		  <exclusions>
		  	<exclusion>
		  		<artifactId>jline</artifactId>
		  		<groupId>jline</groupId>
		  	</exclusion>
		  	<exclusion>
		  		<artifactId>netty</artifactId>
		  		<groupId>io.netty</groupId>
		  	</exclusion>
		  </exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>${httpclient-version}</version>
		</dependency>
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>${jdom-version}</version>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>${dom4j-version}</version>
			<exclusions>
				<exclusion>
					<groupId>xml-apis</groupId>
					<artifactId>xml-apis</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>${servlet-api-version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>${jsp-api-version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>aspectj</groupId>
			<artifactId>aspectjweaver</artifactId>
			<version>${aspectjweaver-version}</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j-version}</version>
		</dependency>

		<!-- cxf -->
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxws</artifactId>
			<version>${cxf-rt-frontend-jaxws-version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http</artifactId>
			<version>${cxf-rt-transports-http-version}</version>
		</dependency>
		<!-- 数据库 -->
		<dependency>
			<groupId>ojdbc</groupId>
			<artifactId>ojdbc</artifactId>
			<version>${ojdbc-version}</version>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>druid</artifactId>
			<version>${druid-version}</version>
		</dependency>

		<!-- 客户端 -->
		<dependency>
			<groupId>com.sinosoft.surrender</groupId>
			<artifactId>surrender-service-client</artifactId>
			<version>${surrender-service-client-version}${env.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sinosoft.common.util.quartz</groupId>
			<artifactId>batch-util-quartz</artifactId>
			<version>${batch-util-quartz-version}${env.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sinosoft.surrender.db</groupId>
			<artifactId>surrender-db</artifactId>
			<version>${surrender-db-version}${env.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sinosoft.ybt</groupId>
			<artifactId>ybt-savemsg-client</artifactId>
			<version>1.0.0${env.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sinosoft.lis</groupId>
			<artifactId>lis-endorsement-webservice</artifactId>
			<version>0.0.1${env.version}</version>
		</dependency>
		<dependency>
			<groupId>com.sinosoft.lis</groupId>
			<artifactId>lis-utils</artifactId>
			<version>0.0.1${env.version}</version>
		</dependency>

		<!-- 测试 -->
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
			<version>3.2.16.RELEASE</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
		</plugins>
		<finalName>surrender-service-platform</finalName>
		<filters>
			<filter>src/main/env/${env}/jdbc.properties</filter>
			<filter>src/main/env/${env}/config.properties</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

</project>